---
/**
 * PageLayout - Layout para p√°ginas internas con breadcrumb y hero
 */
import BaseLayout from '@/layouts/BaseLayout.astro';

export interface Props {
  title: string;
  description: string;
  lang?: 'en' | 'es';
  breadcrumbs?: Array<{
    label: string;
    href: string;
  }>;
  heading?: string;
  subheading?: string;
  showTitle?: boolean;
}

const {
  title,
  description,
  lang,
  breadcrumbs,
  heading,
  subheading,
  showTitle = true
} = Astro.props;
---

<BaseLayout title={title} description={description} lang={lang}>
  <!-- Breadcrumb con espaciado balanceado mobile/desktop -->
  {breadcrumbs && breadcrumbs.length > 0 && (
    <nav aria-label="Breadcrumb" class="container pt-4 md:pt-6 pb-3 md:pb-4">
      <ol class="flex flex-wrap items-center gap-2 text-sm text-text-secondary">
        {breadcrumbs.map((crumb, index) => (
          <li class="flex items-center gap-2">
            {index > 0 && <span>/</span>}
            <a
              href={crumb.href}
              class="hover:text-color-primary transition-colors"
            >
              {crumb.label}
            </a>
          </li>
        ))}
      </ol>
    </nav>
  )}

  <!-- Page Header -->
  {showTitle && heading && (
    <section class="py-8 md:py-12 bg-bg-secondary">
      <div class="container text-center">
        <h1 class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-serif font-bold mb-3 md:mb-4">
          {heading}
        </h1>
        {subheading && (
          <p class="text-lg md:text-xl text-text-secondary max-w-3xl mx-auto">
            {subheading}
          </p>
        )}
      </div>
    </section>
  )}

  <!-- Content -->
  <div class="container py-8 md:py-12 lg:py-16">
    <slot />
  </div>
</BaseLayout>
