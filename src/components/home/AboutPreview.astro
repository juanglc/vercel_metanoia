---
/**
 * About Preview Component
 * Brief introduction to the quartet with link to full About page
 */
interface Props {
  lang: 'en' | 'es';
  content: {
    heading: string;
    subheading: string;
    text: string;
    highlights: Array<{
      icon: string;
      title: string;
      description: string;
    }>;
    cta: string;
  };
}

const { lang, content } = Astro.props;
---

<section class="section bg-bg-primary">
  <div class="container">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-serif font-bold mb-4 animate-fade-in-up">
        {content.heading}
      </h2>
      <p class="text-xl text-color-primary font-medium animate-fade-in-up stagger-1">
        {content.subheading}
      </p>
    </div>

    <!-- About Text -->
    <div class="max-w-4xl mx-auto mb-16">
      <p class="text-lg text-text-secondary leading-relaxed text-center animate-fade-in-up stagger-2">
        {content.text}
      </p>
    </div>

    <!-- Highlights Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-12">
      {content.highlights.map((highlight, index) => (
        <div
          class="text-center p-6 rounded-lg bg-bg-secondary hover:shadow-lg transition-all duration-300 animate-fade-in-up"
          style={`animation-delay: ${(index + 3) * 100}ms`}
        >
          <!-- Icon placeholder - you can replace with actual SVG icons -->
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-color-primary/10 flex items-center justify-center">
            <svg
              class="w-8 h-8 text-color-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              {highlight.icon === 'music' && (
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
                />
              )}
              {highlight.icon === 'award' && (
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                />
              )}
              {highlight.icon === 'globe' && (
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              )}
            </svg>
          </div>

          <h3 class="text-xl font-semibold mb-3">
            {highlight.title}
          </h3>
          <p class="text-text-secondary">
            {highlight.description}
          </p>
        </div>
      ))}
    </div>

    <!-- CTA Button -->
    <div class="text-center">
      <a
        href={lang === 'en' ? '/en/about' : '/es/about'}
        class="inline-flex items-center gap-2 px-8 py-4 bg-color-primary text-white font-semibold rounded-lg hover:bg-color-primary-hover transition-all hover:scale-105"
      >
        {content.cta}
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"
          />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .stagger-1 { animation-delay: 100ms; }
  .stagger-2 { animation-delay: 200ms; }
</style>
