---
/**
 * Featured Concerts Component
 * Displays upcoming concerts from JSON data
 */

import concertsData from '@/data/concerts.json';

interface Props {
  lang: 'en' | 'es';
  content: {
    heading: string;
    subheading: string;
    cta: string;
    empty: string;
  };
}

const { lang, content } = Astro.props;

// Get upcoming concerts directly from JSON
const today = new Date().toISOString().split('T')[0];
const upcomingConcerts = concertsData.concerts
  .filter(concert => concert.date >= today && concert.status !== 'past')
  .sort((a, b) => a.date.localeCompare(b.date))
  .slice(0, 3); // Mostrar solo 3 conciertos

// Format date for display
const formatDate = (dateStr: string) => {
  const date = new Date(dateStr);
  const options: Intl.DateTimeFormatOptions = {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  };
  const locale = lang === 'en' ? 'en-US' : 'es-ES';
  return date.toLocaleDateString(locale, options);
};

// Transform concerts to simple format
const displayConcerts = upcomingConcerts.map(concert => ({
  date: formatDate(concert.date),
  venue: concert.venue[lang],
  city: concert.city,
  country: concert.country[lang],
  program: concert.program.map(
    piece => `${piece.composer}: ${piece.work[lang]}`
  ),
}));
---

<section class="featured-concerts section-tight">
  <div class="container">

    <!-- Header con animaciones -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-serif font-bold mb-4 animate-on-scroll">
        {content.heading}
      </h2>
      <p class="text-xl text-text-secondary animate-on-scroll delay-100">
        {content.subheading}
      </p>
    </div>

    <!-- Concerts Grid con animaciones -->
    {displayConcerts.length > 0 ? (
      <>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {displayConcerts.map((concert, index) => (
            <div class={`concert-card card-glass p-6 rounded-xl animate-on-scroll delay-${(index + 2) * 100}`}>
              <div class="text-sm font-semibold text-color-primary mb-2">
                {concert.date}
              </div>

              <h3 class="text-xl font-bold mb-2">{concert.venue}</h3>

              <p class="text-text-secondary mb-4">
                {concert.city}, {concert.country}
              </p>

              <div class="border-t border-divider pt-4">
                <p class="text-sm font-semibold mb-2">
                  {lang === 'en' ? 'Program:' : 'Programa:'}
                </p>
                <ul class="space-y-1">
                  {concert.program.map((work) => (
                    <li class="text-sm text-text-secondary">{work}</li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>

        <!-- CTA con animaciÃ³n -->
        <div class="text-center animate-on-scroll delay-600">
          <a
            href={lang === 'en' ? '/en/concerts' : '/es/concerts'}
            class="btn btn-primary inline-flex items-center gap-2 px-8 py-4 rounded-lg text-lg font-medium transition-all hover:shadow-xl"
          >
            {content.cta}
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </>
    ) : (
      <div class="text-center py-16 animate-on-scroll">
        <p class="text-xl text-text-secondary">{content.empty}</p>
      </div>
    )}

  </div>
</section>
