---
/**
 * Header Component - Main navigation with logo, menu, theme toggle, and language switch
 */
import ThemeToggle from '@/components/common/ThemeToggle.astro';
import LanguageSwitch from '@/components/common/LanguageSwitch.astro';

export interface Props {
  lang: 'en' | 'es';
  currentPath: string;
}

const { lang, currentPath } = Astro.props;

// Navigation items
const navItems = {
  en: [
    { label: 'Home', href: '/en/' },
    { label: 'About', href: '/en/about' },
    { label: 'Gallery', href: '/en/gallery' },
    { label: 'Concerts', href: '/en/concerts' },
    { label: 'Services', href: '/en/services' },
    { label: 'Contact', href: '/en/contact' },
  ],
  es: [
    { label: 'Inicio', href: '/es/' },
    { label: 'Nosotros', href: '/es/about' },
    { label: 'Galería', href: '/es/gallery' },
    { label: 'Conciertos', href: '/es/concerts' },
    { label: 'Servicios', href: '/es/services' },
    { label: 'Contacto', href: '/es/contacto' },
  ],
};

const items = navItems[lang];

// Check if link is active
const isActive = (href: string) => {
  if (href === `/${lang}/` || href === `/${lang}`) {
    return currentPath === `/${lang}/` || currentPath === `/${lang}`;
  }
  return currentPath.startsWith(href);
};
---

<header class="header sticky top-0 z-50 bg-bg-primary/95 backdrop-blur-sm border-b border-divider">
  <div class="container">
    <nav class="flex items-center justify-between py-4" aria-label={lang === 'en' ? 'Main navigation' : 'Navegación principal'}>
      <!-- Logo -->
      <a href={`/${lang}/`} class="logo flex items-center gap-3 group" aria-label={lang === 'en' ? 'Home' : 'Inicio'}>
        <!-- Logo adaptivo: cambia en dark/light mode -->
        <img
          src="/logos/logo-light.png"
          alt="Cuarteto Metanoia"
          width="180"
          height="60"
          class="h-12 w-auto dark:hidden block transition-transform group-hover:scale-105"
          loading="eager"
        />
        <img
          src="/logos/logo-dark.png"
          alt="Cuarteto Metanoia"
          width="180"
          height="60"
          class="h-12 w-auto hidden dark:block transition-transform group-hover:scale-105"
          loading="eager"
        />
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden lg:flex items-center gap-8">
        {items.map((item) => (
          <li>
            <a
              href={item.href}
              class={`nav-link ${isActive(item.href) ? 'active' : ''}`}
              aria-current={isActive(item.href) ? 'page' : undefined}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Actions: Theme Toggle + Language Switch + Mobile Menu -->
      <div class="flex items-center gap-4">
        <ThemeToggle lang={lang} />
        <LanguageSwitch lang={lang} currentPath={currentPath} />

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="lg:hidden p-2 rounded-lg hover:bg-bg-secondary transition-colors"
          aria-label={lang === 'en' ? 'Toggle menu' : 'Abrir menú'}
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              class="menu-icon"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
            <path
              class="close-icon hidden"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>
      </div>
    </nav>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="lg:hidden hidden pb-4"
      aria-label={lang === 'en' ? 'Mobile navigation' : 'Navegación móvil'}
    >
      <ul class="flex flex-col gap-2">
        {items.map((item) => (
          <li>
            <a
              href={item.href}
              class={`mobile-nav-link ${isActive(item.href) ? 'active' : ''}`}
              aria-current={isActive(item.href) ? 'page' : undefined}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</header>

<style>
  .nav-link {
    position: relative;
    font-size: var(--font-size-base);
    font-weight: 500;
    color: var(--text-secondary);
    transition: color var(--transition-base);
    padding: var(--space-2) 0;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-primary);
    transition: width var(--transition-base);
  }

  .nav-link:hover,
  .nav-link:focus {
    color: var(--text-primary);
  }

  .nav-link:hover::after,
  .nav-link:focus::after {
    width: 100%;
  }

  .nav-link.active {
    color: var(--color-primary);
    font-weight: 600;
  }

  .nav-link.active::after {
    width: 100%;
  }

  .mobile-nav-link {
    display: block;
    padding: var(--space-3) var(--space-4);
    border-radius: var(--radius-base);
    font-weight: 500;
    color: var(--text-secondary);
    transition: all var(--transition-base);
  }

  .mobile-nav-link:hover,
  .mobile-nav-link:focus {
    background: var(--bg-secondary);
    color: var(--text-primary);
  }

  .mobile-nav-link.active {
    background: var(--color-secondary);
    color: var(--color-primary);
    font-weight: 600;
  }
</style>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = menuButton?.querySelector('.menu-icon');
  const closeIcon = menuButton?.querySelector('.close-icon');

  menuButton?.addEventListener('click', () => {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';

    menuButton.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!target.closest('header')) {
      mobileMenu?.classList.add('hidden');
      menuButton?.setAttribute('aria-expanded', 'false');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
  });

  // Close mobile menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      mobileMenu?.classList.add('hidden');
      menuButton?.setAttribute('aria-expanded', 'false');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
  });
</script>
