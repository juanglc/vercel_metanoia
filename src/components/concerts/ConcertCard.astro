---
/**
 * Concert Card Component
 * Individual concert card with details and actions
 */
import { formatDate } from '@/utils/i18n';

interface Concert {
  id: string;
  date: string;
  time: string;
  venue: string;
  city: string;
  country: string;
  address: string;
  program: Array<{ composer: string; work: string }>;
  description: string;
  duration: string;
  ticketsUrl: string | null;
  price: { amount: number; currency: string; free: boolean };
  status: 'available' | 'sold-out' | 'past';
  image: string;
}

interface Props {
  concert: Concert;
  content: any;
  lang: 'en' | 'es';
  index?: number;
}

const { concert, content, lang, index = 0 } = Astro.props;

const r2PublicUrl = import.meta.env.R2_PUBLIC_URL || 'https://pub-placeholder.r2.dev';
const concertImageUrl = concert.image ? `${r2PublicUrl}/${concert.image}` : null;

const isPast = concert.status === 'past';
const isSoldOut = concert.status === 'sold-out';
const isUpcoming = concert.status === 'available';
---

<article
  class="concert-card bg-bg-secondary rounded-lg overflow-hidden shadow-soft hover:shadow-lg transition-all duration-300 animate-fade-in-up"
  style={`animation-delay: ${index * 100}ms`}
>
  <!-- Concert Image -->
  {concertImageUrl ? (
    <div class="aspect-[16/9] overflow-hidden bg-gradient-to-br from-accent-brown-light to-accent-gold-light">
      <img
        src={concertImageUrl}
        alt={`${concert.venue} - ${concert.city}`}
        class="w-full h-full object-cover transition-transform duration-500 hover:scale-110"
        loading={index < 4 ? "eager" : "lazy"}
        fetchpriority={index === 0 ? "high" : undefined}
      />
    </div>
  ) : (
    <div class="aspect-[16/9] bg-gradient-to-br from-accent-brown-light to-accent-gold-light flex items-center justify-center">
      <svg class="w-16 h-16 text-white/30" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 14.5v-9l6 4.5-6 4.5z"/>
      </svg>
    </div>
  )}

  <div class="p-6">
    <!-- Status Badge -->
    <div class="flex items-center justify-between mb-4">
      <time
        datetime={concert.date}
        class="text-sm font-semibold text-color-primary"
      >
        {formatDate(concert.date, lang, {
          weekday: 'short',
          year: 'numeric',
          month: 'short',
          day: 'numeric'
        })}
      </time>

      {isPast && (
        <span class="px-3 py-1 bg-bg-tertiary text-text-secondary text-xs font-semibold rounded-full">
          {lang === 'en' ? 'Past' : 'Pasado'}
        </span>
      )}
      {isSoldOut && (
        <span class="px-3 py-1 bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 text-xs font-semibold rounded-full">
          {content.labels.soldOut}
        </span>
      )}
      {concert.price.free && (
        <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400 text-xs font-semibold rounded-full">
          {content.labels.free}
        </span>
      )}
    </div>

    <!-- Venue & Location -->
    <h3 class="text-2xl font-serif font-bold mb-2">
      {concert.venue}
    </h3>
    <p class="text-text-secondary mb-2 flex items-center gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
      </svg>
      {concert.city}, {concert.country}
    </p>

    <!-- Time -->
    <p class="text-text-secondary text-sm mb-4 flex items-center gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      {concert.time}
      {concert.duration && (
        <span class="text-text-tertiary">
          â€¢ {concert.duration} {lang === 'en' ? 'min' : 'min'}
        </span>
      )}
    </p>

    <!-- Description -->
    <p class="text-text-secondary mb-6 line-clamp-3">
      {concert.description}
    </p>

    <!-- Program -->
    <div class="mb-6">
      <h4 class="text-sm font-bold text-text-primary mb-2 uppercase tracking-wide">
        {content.labels.program}
      </h4>
      <ul class="space-y-2">
        {concert.program.map((piece) => (
          <li class="text-sm">
            <span class="font-semibold">{piece.composer}</span>
            <br />
            <span class="text-text-secondary">{piece.work}</span>
          </li>
        ))}
      </ul>
    </div>

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-3">
      {isUpcoming && concert.ticketsUrl && !isSoldOut && (
        <a
          href={concert.ticketsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary text-center"
        >
          {content.labels.tickets}
        </a>

      )}
    </div>
  </div>
</article>

<style>
  .concert-card {
    transform: translateY(0);
  }

  .concert-card:hover {
    transform: translateY(-4px);
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
