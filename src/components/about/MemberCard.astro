---
/**
 * Member Card Component
 * Displays musician profile with photo, bio, education, and achievements
 */
interface Props {
  member: {
    name: string;
    instrument: string;
    bio: string;
    education: string[];
    achievements: string[];
    image: string;
  };
  lang: 'en' | 'es';
  delay?: number;
}

const { member, lang, delay = 0 } = Astro.props;
---

<article
  class="member-card bg-bg-secondary rounded-lg overflow-hidden shadow-soft hover:shadow-lg transition-all duration-300 animate-fade-in-up"
  style={`animation-delay: ${delay}ms`}
>
  <!-- Member Photo -->
  <div class="aspect-square bg-gradient-to-br from-accent-brown-light to-accent-gold-light relative overflow-hidden group">
    <!-- Placeholder - replace with actual image when available -->
    <div class="absolute inset-0 flex items-center justify-center">
      <svg
        class="w-24 h-24 text-white/30 group-hover:scale-110 transition-transform duration-300"
        fill="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
      </svg>
    </div>
    <!-- When you have real images, use this instead:
    <img
      src={member.image}
      alt={member.name}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
    />
    -->
  </div>

  <div class="p-6">
    <!-- Name & Instrument -->
    <h3 class="text-2xl font-serif font-bold mb-1">
      {member.name}
    </h3>
    <p class="text-color-primary font-semibold mb-4">
      {member.instrument}
    </p>

    <!-- Bio -->
    <p class="text-text-secondary mb-6 leading-relaxed">
      {member.bio}
    </p>

    <!-- Education -->
    <div class="mb-6">
      <h4 class="text-sm font-bold text-text-primary mb-2 uppercase tracking-wide">
        {lang === 'en' ? 'Education' : 'Educaci√≥n'}
      </h4>
      <ul class="space-y-1">
        {member.education.map((edu) => (
          <li class="text-sm text-text-secondary flex items-start gap-2">
            <svg
              class="w-4 h-4 text-color-primary flex-shrink-0 mt-0.5"
              fill="currentColor"
              viewBox="0 0 20 20"
              aria-hidden="true"
            >
              <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
            </svg>
            {edu}
          </li>
        ))}
      </ul>
    </div>

    <!-- Achievements -->
    <div>
      <h4 class="text-sm font-bold text-text-primary mb-2 uppercase tracking-wide">
        {lang === 'en' ? 'Notable Achievements' : 'Logros Destacados'}
      </h4>
      <ul class="space-y-1">
        {member.achievements.map((achievement) => (
          <li class="text-sm text-text-secondary flex items-start gap-2">
            <svg
              class="w-4 h-4 text-color-secondary flex-shrink-0 mt-0.5"
              fill="currentColor"
              viewBox="0 0 20 20"
              aria-hidden="true"
            >
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            {achievement}
          </li>
        ))}
      </ul>
    </div>
  </div>
</article>

<style>
  .member-card {
    transform: translateY(0);
  }

  .member-card:hover {
    transform: translateY(-4px);
  }
</style>
