---
/**
 * Contact Info Component
 * Contact details and social media links
 */
interface Props {
  content: any;
}

const { content } = Astro.props;

// Social media links (replace with actual URLs)
const socialLinks = {
  instagram: 'https://instagram.com/cuartetometanoia',
  facebook: 'https://facebook.com/cuartetometanoia',
  youtube: 'https://youtube.com/@cuartetometanoia',
  spotify: 'https://open.spotify.com/artist/cuartetometanoia',
};
---

<div class="contact-info-card bg-bg-secondary rounded-lg p-6 md:p-8 shadow-soft">
  <h2 class="text-xl md:text-2xl font-serif font-bold mb-6">
    {content.heading}
  </h2>

  <!-- Contact Details -->
  <div class="space-y-6">
    <!-- Email -->
    <div class="flex items-start gap-3 md:gap-4">
      <div class="w-10 h-10 md:w-12 md:h-12 flex-shrink-0 rounded-lg bg-color-primary/10 flex items-center justify-center">
        <svg
          class="w-5 h-5 md:w-6 md:h-6 text-color-primary"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          />
        </svg>
      </div>
      <div class="min-w-0 flex-1">
        <p class="text-xs md:text-sm font-semibold text-text-secondary mb-1">
          {content.email.label}
        </p>
        <a
          href={`mailto:${content.email.value}`}
          class="text-sm md:text-base lg:text-lg text-color-primary hover:text-color-primary-hover transition-colors break-all"
        >
          {content.email.value}
        </a>
      </div>
    </div>

    <!-- Phone -->
    <div class="flex items-start gap-3 md:gap-4">
      <div class="w-10 h-10 md:w-12 md:h-12 flex-shrink-0 rounded-lg bg-color-primary/10 flex items-center justify-center">
        <svg
          class="w-5 h-5 md:w-6 md:h-6 text-color-primary"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
          />
        </svg>
      </div>
      <div class="min-w-0 flex-1">
        <p class="text-xs md:text-sm font-semibold text-text-secondary mb-1">
          {content.phone.label}
        </p>
        <a
          href={`tel:${content.phone.value.replace(/\s/g, '')}`}
          class="text-sm md:text-base lg:text-lg text-color-primary hover:text-color-primary-hover transition-colors"
        >
          {content.phone.value}
        </a>
      </div>
    </div>

    <!-- Location -->
    <div class="flex items-start gap-3 md:gap-4">
      <div class="w-10 h-10 md:w-12 md:h-12 flex-shrink-0 rounded-lg bg-color-primary/10 flex items-center justify-center">
        <svg
          class="w-5 h-5 md:w-6 md:h-6 text-color-primary"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
          />
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
          />
        </svg>
      </div>
      <div class="min-w-0 flex-1">
        <p class="text-xs md:text-sm font-semibold text-text-secondary mb-1">
          {content.location.label}
        </p>
        <p class="text-sm md:text-base lg:text-lg text-text-primary">
          {content.location.value}
        </p>
      </div>
    </div>
  </div>

  <!-- Social Media -->
  <div class="mt-8 pt-8 border-t border-border-medium">
    <p class="text-xs md:text-sm font-semibold text-text-secondary mb-4">
      {content.social.label}
    </p>
    <div class="flex gap-3 md:gap-4">
      {Object.entries(socialLinks).map(([platform, url]) => (
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="w-9 h-9 md:w-10 md:h-10 rounded-full bg-color-primary/10 hover:bg-color-primary text-color-primary hover:text-white flex items-center justify-center transition-all hover:scale-110"
          aria-label={content.social.platforms[platform]}
        >
          {/* SVG icons aqu√≠ */}
        </a>
      ))}
    </div>
  </div>
</div>
