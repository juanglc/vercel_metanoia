---
/**
 * Services Page - Spanish
 * Complete services offering with process, testimonials, and FAQ
 */
import PageLayout from '@/layouts/PageLayout.astro';
import ServiceCard from '@/components/services/ServiceCard.astro';
import { getContent } from '@/utils/i18n';

const lang = 'es';
const content = await getContent(lang, 'services');
---

<PageLayout
  title={content.meta.title}
  description={content.meta.description}
  lang={lang}
  breadcrumbs={[
    { label: 'Inicio', href: '/es/' },
    { label: 'Servicios', href: '/es/services' }
  ]}
  showTitle={false}
>
  <!-- Hero Section -->
  <section class="mb-20 text-center">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold mb-4 animate-fade-in-up">
      {content.hero.title}
    </h1>
    <p class="text-xl text-text-secondary animate-fade-in-up stagger-1">
      {content.hero.subtitle}
    </p>
  </section>

  <!-- Intro Section -->
  <section class="mb-20 max-w-4xl mx-auto text-center">
    <h2 class="text-3xl font-serif font-bold mb-6 animate-fade-in-up">
      {content.intro.heading}
    </h2>
    <p class="text-lg text-text-secondary leading-relaxed animate-fade-in-up stagger-1">
      {content.intro.text}
    </p>
  </section>

  <!-- Services Grid -->
  <section class="mb-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {content.services.map((service, index) => (
        <ServiceCard service={service} index={index} />
      ))}
    </div>
  </section>

  <!-- Process Section -->
  <section class="mb-20 bg-bg-secondary -mx-4 md:-mx-8 lg:-mx-12 px-4 md:px-8 lg:px-12 py-16">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4 text-center animate-fade-in-up">
        {content.process.heading}
      </h2>
      <p class="text-xl text-text-secondary text-center mb-12 animate-fade-in-up stagger-1">
        {content.process.subtitle}
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {content.process.steps.map((step, index) => (
          <div
            class="text-center animate-fade-in-up"
            style={`animation-delay: ${(index + 2) * 100}ms`}
          >
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-color-primary text-white flex items-center justify-center text-2xl font-bold">
              {step.number}
            </div>
            <h3 class="text-xl font-bold mb-3">
              {step.title}
            </h3>
            <p class="text-text-secondary text-sm">
              {step.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="mb-20">
    <h2 class="text-3xl md:text-4xl font-serif font-bold mb-12 text-center animate-fade-in-up">
      {content.testimonials.heading}
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {content.testimonials.items.map((testimonial, index) => (
        <blockquote
          class="bg-bg-secondary p-6 rounded-lg shadow-soft animate-fade-in-up"
          style={`animation-delay: ${index * 100}ms`}
        >
          <svg
            class="w-8 h-8 text-color-primary/20 mb-4"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>

          <p class="text-text-secondary italic mb-6 leading-relaxed">
            "{testimonial.quote}"
          </p>

          <footer>
            <cite class="not-italic">
              <p class="font-semibold text-text-primary">
                {testimonial.author}
              </p>
              <p class="text-sm text-text-secondary">
                {testimonial.role}
              </p>
            </cite>
          </footer>
        </blockquote>
      ))}
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="mb-20 max-w-3xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-serif font-bold mb-12 text-center animate-fade-in-up">
      {content.faq.heading}
    </h2>

    <div class="space-y-6">
      {content.faq.items.map((item, index) => (
        <details
          class="faq-item bg-bg-secondary rounded-lg p-6 shadow-soft animate-fade-in-up"
          style={`animation-delay: ${index * 50}ms`}
        >
          <summary class="font-bold text-lg cursor-pointer flex justify-between items-center">
            {item.question}
            <svg
              class="faq-icon w-5 h-5 text-color-primary transition-transform duration-300"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          </summary>
          <p class="text-text-secondary mt-4 leading-relaxed">
            {item.answer}
          </p>
        </details>
      ))}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="text-center bg-gradient-to-br from-color-primary to-color-secondary text-white -mx-4 md:-mx-8 lg:-mx-12 px-4 md:px-8 lg:px-12 py-16 rounded-lg">
    <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4 animate-fade-in-up">
      {content.cta.heading}
    </h2>
    <p class="text-lg mb-8 opacity-90 max-w-2xl mx-auto animate-fade-in-up stagger-1">
      {content.cta.text}
    </p>

    <a
      href="/es/contact"
      class="inline-block px-8 py-4 bg-white text-color-primary font-semibold rounded-lg hover:bg-opacity-90 transition-all hover:scale-105 animate-fade-in-up stagger-2"
    >
      {content.cta.button}
    </a>
  </section>
</PageLayout>

<style>
  .stagger-1 { animation-delay: 100ms; }
  .stagger-2 { animation-delay: 200ms; }

  details[open] .faq-icon {
    transform: rotate(180deg);
  }

  details summary::-webkit-details-marker {
    display: none;
  }

  .faq-item {
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    box-shadow: var(--shadow-lg);
  }
</style>
